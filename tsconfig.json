    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", 
    "rootDir": "./"
  },
  "include": [
    "app.ts",
    "src/**/*.ts" 
  ],
  "exclude": [
    "node_modules"
  ]
}
