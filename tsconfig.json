{
  "compilerOptions": {
    "target": "ES6", 
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", 
    "rootDir": "./",
    "types": ["node", "jest"] 
  },
  "include": [
    "app.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
